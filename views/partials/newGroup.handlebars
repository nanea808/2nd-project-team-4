<div class="container-fluid text-center">
    <form id="new-group-form">
        <div class="form-group row">
            <label for="group-title" class="col-sm-2 col-form-label">Group Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="group-title" placeholder="Your group's name or event's title here">
            </div>
            <div class="form-group row">
                <label for="groupUser-name" class="col=sm=2 col-form-label">Event Attendee</label>
            </div>
            <div class="col-sm-10">
                <input type="text" id="groupUser-name" class="form-control groupUser" placeholder="Name">
            </div>
            <div class="col-sm-10">
                <input type="email" class="form-control groupUser" placeholder="name@email.com">
            </div>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-dark" id="addGroup-btn">Save New</button>
            </div>
        </div>
    </form>
</div>